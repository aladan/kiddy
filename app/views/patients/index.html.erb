<div class="container">
  
  <div class="row">
    <% @patients.in_groups_of(3) do |patient_line| %>
      <div class="col-md-12 user_line">
        <%patient_line.compact.each do |patient|%>
          <div class="col-md-4 user">
            <h3><%=patient.name + ' ' + patient.surname%></h3>
            <h5><%=patient.email%></h5>
          </div>
        <%end%>
      </div>
    <%end%>
  </div>

</div>
